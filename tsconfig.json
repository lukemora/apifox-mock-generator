{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"lib": ["ES2020"],
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src/**/*", "package.json"],
	"exclude": ["node_modules", "dist", "generated"]
}
